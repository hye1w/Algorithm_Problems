#include<stdio.h>

int main(void)
{
    int i, j, N;
    scanf("%d", &N);
    
    for(i = 0; i < N - 1; i++)
    {
        for(j = 0; j < (N-1-i); j++)
        {
            printf(" ");
        }
        for(j = 0; j < (i*2+1); j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    for(i = 0; i < N; i++)
    {
        for(j = 0; j < i; j++)
        {
            printf(" ");
        }
        for(j = 0; j < (N-i)*2-1; j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}
